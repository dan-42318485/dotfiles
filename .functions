#!/usr/bin/env bash

init_ssh() {
  eval `ssh-agent -s` > /dev/null 2>&1
  ssh-add "$HOME/.ssh/dquist_rsa" > /dev/null 2>&1
}

# This fixes zsh fuzzy search which breaks with the vi-mode plugin
# start typing + [Up-Arrow] - fuzzy find history forward
fix_zsh_history() {
  if [[ "${terminfo[kcuu1]}" != "" ]]; then
    autoload -U up-line-or-beginning-search
    zle -N up-line-or-beginning-search
    bindkey "${terminfo[kcuu1]}" up-line-or-beginning-search
  fi
  # start typing + [Down-Arrow] - fuzzy find history backward
  if [[ "${terminfo[kcud1]}" != "" ]]; then
    autoload -U down-line-or-beginning-search
    zle -N down-line-or-beginning-search
    bindkey "${terminfo[kcud1]}" down-line-or-beginning-search
  fi
}

bash_check_login() {
  export LOGIN_SHELL=0
  shopt -q login_shell
  if [[ $? -eq 0 ]]; then
    export LOGIN_SHELL=1
  fi
}

bash_launch_wsl() {
  if [[ "$(expr substr $(uname -s) 1 10)" == "MINGW64_NT" ]]; then
    if [[ -x "$(command -v wsl)" ]] && [[ $LOGIN_SHELL == 0 ]]; then
      exec wsl
    fi
  fi
}

setup_common() {
  init_ssh
  fix_zsh_history
}

# Local additions - Don't edit below this line
if [[ -f ".functions.local" ]]; then
  source ".functions.local"
fi
